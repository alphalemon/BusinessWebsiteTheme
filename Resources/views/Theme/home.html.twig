{% block body_tag %}
<body id="page1">
{% endblock %}

{% block header %}
<div class="body1">
    <div class="body2">
        <div class="main">
<!-- header -->
            <header>
                <div class="wrapper">
                <div id="logo">
                {% block logo %}
                    {# BEGIN-SLOT LOGO
                        repeated: site
                        htmlContent: |
                            <img src="/uploads/assets/media/business-website-original-logo.png" title="Progress website logo" alt="Progress website logo" />
                    END-SLOT #}
                    {{ renderSlot('logo') }}
                {% endblock %}
                </div>

                {% block nav_menu %}
                    {# BEGIN-SLOT NAV_MENU
                        repeated: language
                        blockType: BusinessMenu
                    END-SLOT #}
                    {{ renderSlot('nav_menu') }}
                {% endblock %}

                </div>
                <div class="wrapper">
                    {% block slider_box %}
                        {# BEGIN-SLOT SLIDER_BOX
                            blockType: BusinessSlider
                        END-SLOT #}
                        {{ renderSlot('slider_box') }}
                    {% endblock %}
                </div>
            </header>
<!-- header end-->
        </div>
    </div>
</div>
{% endblock %}

