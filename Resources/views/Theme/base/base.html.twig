{% extends base_template %}

{% block conditional_assets %}
    <!--[if lt IE 9]>
  	<script type="text/javascript" src="/bundles/businesswebsitetheme/js/html5.js"></script>
	<style type="text/css">
            .bg{ behavior: url(/bundles/businesswebsitetheme/js/PIE.htc); }
	</style>
    <![endif]-->
    <!--[if lt IE 7]>
        <div style=' clear: both; text-align:center; position: relative;'>
            <a href="http://www.microsoft.com/windows/internet-explorer/default.aspx?ocid=ie6_countdown_bannercode"><img src="http://www.theie6countdown.com/images/upgrade.jpg" border="0"  alt="" /></a>
        </div>
    <![endif]-->
{% endblock %}

{% block body %}
{% block header %}
<div class="body1">
    <div class="body2">
        <div class="body5">
            <div class="main">
                <!-- header -->
                <header>
                    <div class="wrapper">
                    <div id="logo">
                    {% block logo %}
                        {# BEGIN-SLOT
                            name: logo
                            repeated: site
                            htmlContent: |
                                <img src="/uploads/assets/media/business-website-original-logo.png" title="Progress website logo" alt="Progress website logo" />
                        END-SLOT #}
                        {{ renderSlot('logo') }}
                    {% endblock %}
                    </div>
                    <nav>
                    {% block nav_menu %}
                        {# BEGIN-SLOT
                            name: nav_menu
                            repeated: language
                            blockType: BusinessMenu
                        END-SLOT #}
                        {{ renderSlot('nav_menu') }}
                    {% endblock %}
                    </nav>
                    </div>
                </header>
                <!-- header end-->
            </div>
        </div>
    </div>
</div>
{% endblock %}
<div class="body3">
    <div class="main">
        {% block content %}{% endblock %}
    </div>
</div>
<div class="body4">
    <div class="main">
        <article id="content2">
            <div class="wrapper">
                <section class="col3">
                    {% block footer_title_1 %}
                        {# BEGIN-SLOT
                            name: footer_title_1
                            repeated: language
                            htmlContent: |
                                <h4>Why Us?</h4>
                        END-SLOT #}
                        {{ renderSlot('footer_title_1') }}
                    {% endblock %}

                    {% block nav_menu_1 %}
                        {# BEGIN-SLOT
                            name: nav_menu_1
                            repeated: language
                            htmlContent: |
                                <ul class="list1">
                                    <li><a href="#">Lorem ipsum dolor sit</a></li>
                                    <li><a href="#">Dmet, consectetur</a></li>
                                    <li><a href="#">Adipisicing elit eiusmod </a></li>
                                    <li><a href="#">Tempor incididunt ut</a></li>
                                </ul>
                        END-SLOT #}
                        {{ renderSlot('nav_menu_1') }}
                    {% endblock %}
                </section>
                <section class="col3 pad_left2">
                    {% block footer_title_2 %}
                        {# BEGIN-SLOT
                            name: footer_title_2
                            repeated: language
                            htmlContent: |
                                <h4>Address</h4>
                        END-SLOT #}
                        {{ renderSlot('footer_title_2') }}
                    {% endblock %}

                    {% block nav_menu_2 %}
                        {# BEGIN-SLOT
                            name: nav_menu_2
                            repeated: language
                            htmlContent: |
                                <ul class="address">
                                    <li><span>Country:</span>USA</li>
                                    <li><span>City:</span>San Diego</li>
                                    <li><span>Phone:</span>8 800 154-45-67</li>
                                    <li><span>Email:</span><a href="mailto:">progress@mail.com</a></li>
                                </ul>
                        END-SLOT #}
                        {{ renderSlot('nav_menu_2') }}
                    {% endblock %}
                </section>
                <section class="col3 pad_left2">
                    {% block footer_title_3 %}
                        {# BEGIN-SLOT
                            name: footer_title_3
                            repeated: language
                            htmlContent: |
                                <h4>Follow Us</h4>
                        END-SLOT #}
                        {{ renderSlot('footer_title_3') }}
                    {% endblock %}

                    {% block nav_menu_3 %}
                        {# BEGIN-SLOT
                            name: nav_menu_3
                            repeated: language
                            htmlContent: |
                                <ul id="icons">
                                    <li><a href="#"><img src="/bundles/businesswebsitetheme/images/icon1.jpg" alt="">Facebook</a></li>
                                    <li><a href="#"><img src="/bundles/businesswebsitetheme/images/icon2.jpg" alt="">Twitter</a></li>
                                    <li><a href="#"><img src="/bundles/businesswebsitetheme/images/icon3.jpg" alt="">LinkedIn</a></li>
                                    <li><a href="#"><img src="/bundles/businesswebsitetheme/images/icon4.jpg" alt="">Delicious</a></li>
                                </ul>
                        END-SLOT #}
                        {{ renderSlot('nav_menu_3') }}
                    {% endblock %}
                </section>
                <section class="col2 right">
                    {% block footer_title_4 %}
                        {# BEGIN-SLOT
                            name: footer_title_4
                            repeated: language
                            htmlContent: |
                                <h4>Newsletter</h4>
                        END-SLOT #}
                        {{ renderSlot('footer_title_4') }}
                    {% endblock %}

                    {% block newsletter_box %}
                        {# BEGIN-SLOT
                            name: newsletter_box
                            repeated: language
                            htmlContent: |
                                <form id="newsletter" method="post">
                                    <div>
                                    <div class="wrapper">
                                        <input class="input" type="text" value="Type Your Email Here"  onblur="if(this.value=='') this.value='Type Your Email Here'" onfocus="if(this.value =='Type Your Email Here' ) this.value=''" >
                                    </div>
                                    <a href="#" class="button" onclick="document.getElementById('newsletter').submit()">Subscribe</a>
                                    </div>
                                </form>
                        END-SLOT #}
                        {{ renderSlot('newsletter_box') }}
                    {% endblock %}
                </section>
            </div>
        </article>
    </div>
</div>
<div class="main">
<!-- footer -->
    <footer>
    {% block copyright_box %}
        {# BEGIN-SLOT
            name: copyright_box
            repeated: site
            htmlContent: |
                <a href="#">(C) Copyright Progress Business Company</a>
        END-SLOT #}
        {{ renderSlot('copyright_box') }}
    {% endblock %}
    </footer>
<!-- footer end -->
</div>
{% endblock %}