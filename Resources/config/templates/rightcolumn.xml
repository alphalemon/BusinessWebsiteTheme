<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">



    <parameters>
        <parameter key="business_website.rightcolumn.external_stylesheets" type="collection">
            <parameter>@BusinessWebsiteThemeBundle/Resources/public/css/reset.css</parameter>
            <parameter>@BusinessWebsiteThemeBundle/Resources/public/css/layout.css</parameter>
            <parameter>@BusinessWebsiteThemeBundle/Resources/public/css/style.css</parameter>
            <parameter>@BusinessWebsiteThemeBundle/Resources/public/css/al_fix_style.css</parameter>
        </parameter>
        <parameter key="business_website.rightcolumn.external_javascripts" type="collection">
            <parameter>@AlphaLemonThemeEngineBundle/Resources/public/js/vendor/jquery/*</parameter>
            <parameter>@BusinessWebsiteThemeBundle/Resources/public/js/cufon-yui.js</parameter>
            <parameter>@BusinessWebsiteThemeBundle/Resources/public/js//al-cufon-replace.js</parameter>
            <parameter>@BusinessWebsiteThemeBundle/Resources/public/js/Swis721_Cn_BT_400.font.js</parameter>
            <parameter>@BusinessWebsiteThemeBundle/Resources/public/js/Swis721_Cn_BT_700.font.js</parameter>
            <parameter>@BusinessWebsiteThemeBundle/Resources/public/js/tabs.js</parameter>
        </parameter>
        <parameter key="business_website.rightcolumn.external_stylesheets.cms" type="collection">
        </parameter>
    </parameters>


    <services>
        <service id="business_website.theme.template_assets.rightcolumn" class="%alpha_lemon_theme_engine.template_assets.class%">
            <call method="setExternalStylesheets">
                <argument>%business_website.rightcolumn.external_stylesheets%</argument>
            </call>
            <call method="setExternalJavascripts">
                <argument>%business_website.rightcolumn.external_javascripts%</argument>
            </call>
        </service>

        <service id="business_website.theme.template.rightcolumn.slots" class="%alpha_lemon_theme_engine.template_slots.class%">
            <tag name="business_website.theme.template.rightcolumn" />
        </service>

        <service id="business_website.theme.template.rightcolumn" class="%alpha_lemon_theme_engine.template.class%">
            <argument type="service" id="kernel" />
            <argument type="service" id="business_website.theme.template_assets.rightcolumn" />
            <argument type="service" id="business_website.theme.template.rightcolumn.slots" />
            <tag name="business_website.theme.template" />

            <call method="setThemeName">
                <argument type="string">BusinessWebsiteThemeBundle</argument>
            </call>
            <call method="setTemplateName">
                <argument type="string">rightcolumn</argument>
            </call>
        </service>
    </services>
</container>