            <tag name="business_website_theme.template.base.slots" />
        </service>

        <service id="business_website_theme.template.home.slots.footer_title_4" class="%alphalemon_theme_engine.slot.class%">
            <argument type="string">footer_title_4</argument>
            <argument type="collection" >
                <argument key="repeated">language</argument>
                <argument key="htmlContent">
                    <![CDATA[
                        <h4>Newsletter</h4>
                    ]]>
                </argument>
            </argument>
            <tag name="business_website_theme.template.base.slots" />
        </service>

        <service id="business_website_theme.template.home.slots.newsletter_box" class="%alphalemon_theme_engine.slot.class%">
            <argument type="string">newsletter_box</argument>
            <argument type="collection" >
                <argument key="repeated">language</argument>
                <argument key="htmlContent">
                    <![CDATA[
                        <form id="newsletter" method="post">
                            <div>
                            <div class="wrapper">
                                <input class="input" type="text" value="Type Your Email Here"  onblur="if(this.value=='') this.value='Type Your Email Here'" onfocus="if(this.value =='Type Your Email Here' ) this.value=''" >
                            </div>
                            <a href="#" class="button" onclick="document.getElementById('newsletter').submit()">Subscribe</a>
                            </div>
                        </form>
                    ]]>
                </argument>
            </argument>
            <tag name="business_website_theme.template.base.slots" />
        </service>

        <service id="business_website_theme.template.home.slots.copyright_box" class="%alphalemon_theme_engine.slot.class%">
            <argument type="string">copyright_box</argument>
            <argument type="collection" >
                <argument key="repeated">site</argument>
                <argument key="htmlContent">
                    <![CDATA[
                        <a href="#">(C) Copyright Progress Business Company</a>
                    ]]>
                </argument>
            </argument>
            <tag name="business_website_theme.template.base.slots" />
        </service>
    </services>
</container>