<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <services>
        <service id="business_website_theme.template.home.slots.logo" class="%alphalemon_theme_engine.slot.class%">
            <argument type="string">logo</argument>
            <argument type="collection" >
                <argument key="repeated">site</argument>
                <argument key="htmlContent">
                    <![CDATA[
                        Progress Business Company
                    ]]>
                </argument>
            </argument>
            <tag name="business_website_theme.template.base.slots" />
        </service>

        <service id="business_website_theme.template.home.slots.nav_menu" class="%alphalemon_theme_engine.slot.class%">
            <argument type="string">nav_menu</argument>
            <argument type="collection" >
                <argument key="repeated">language</argument>
                <argument key="blockType">BusinessMenu</argument>
                <argument key="htmlContent">
                    <![CDATA[
                        <ul class="business-menu">
                            <li><a href="#">[Home, Welcome!]</a></li>
                            <li><a href="#">[News, Fresh]</a></li>
                            <li><a href="#">[Services, for you]</a></li>
                            <li><a href="#">[Products, The best]</a></li>
                            <li><a href="#">[Contacts, Our Address]</a></li>
                        </ul>
                    ]]>
                </argument>
                <argument key="internalJavascript">
                    <![CDATA[
                        $(".business-menu a").doCufon();
                    ]]>
                </argument>
            </argument>
            <tag name="business_website_theme.template.base.slots" />
        </service>

        <service id="business_website_theme.template.home.slots.footer_title_1" class="%alphalemon_theme_engine.slot.class%">
            <argument type="string">footer_title_1</argument>
            <argument type="collection" >
                <argument key="repeated">language</argument>
                <argument key="htmlContent">
                    <![CDATA[
                        <h4>Why Us?</h4>
                    ]]>
                </argument>
            </argument>
            <tag name="business_website_theme.template.base.slots" />
        </service>

        <service id="business_website_theme.template.home.slots.nav_menu_1" class="%alphalemon_theme_engine.slot.class%">
            <argument type="string">nav_menu_1</argument>
            <argument type="collection" >
                <argument key="repeated">language</argument>
                <argument key="htmlContent">
                    <![CDATA[
                        <ul class="list1">
                            <li><a href="#">Lorem ipsum dolor sit</a></li>
                            <li><a href="#">Dmet, consectetur</a></li>
                            <li><a href="#">Adipisicing elit eiusmod </a></li>
                            <li><a href="#">Tempor incididunt ut</a></li>
                        </ul>
                    ]]>
                </argument>
            </argument>
            <tag name="business_website_theme.template.base.slots" />
        </service>

        <service id="business_website_theme.template.home.slots.footer_title_2" class="%alphalemon_theme_engine.slot.class%">
            <argument type="string">footer_title_2</argument>
            <argument type="collection" >
                <argument key="repeated">language</argument>
                <argument key="htmlContent">
                    <![CDATA[
                        <h4>Address</h4>
                    ]]>
                </argument>
            </argument>
            <tag name="business_website_theme.template.base.slots" />
        </service>

        <service id="business_website_theme.template.home.slots.nav_menu_2" class="%alphalemon_theme_engine.slot.class%">
            <argument type="string">nav_menu_2</argument>
            <argument type="collection" >
                <argument key="repeated">language</argument>
                <argument key="htmlContent">
                    <![CDATA[
                        <ul class="address">
                            <li><span>Country:</span>USA</li>
                            <li><span>City:</span>San Diego</li>
                            <li><span>Phone:</span>8 800 154-45-67</li>
                            <li><span>Email:</span><a href="mailto:">progress@mail.com</a></li>
                        </ul>
                    ]]>
                </argument>
            </argument>
            <tag name="business_website_theme.template.base.slots" />
        </service>

        <service id="business_website_theme.template.home.slots.footer_title_3" class="%alphalemon_theme_engine.slot.class%">
            <argument type="string">footer_title_3</argument>
            <argument type="collection" >
                <argument key="repeated">language</argument>
                <argument key="htmlContent">
                    <![CDATA[
                        <h4>Follow Us</h4>
                    ]]>
                </argument>
            </argument>
            <tag name="business_website_theme.template.base.slots" />
        </service>

        <service id="business_website_theme.template.home.slots.nav_menu_3" class="%alphalemon_theme_engine.slot.class%">
            <argument type="string">nav_menu_3</argument>
            <argument type="collection" >
                <argument key="repeated">language</argument>
                <argument key="htmlContent">
                    <![CDATA[
                        <ul id="icons">
                            <li><a href="#"><img src="/bundles/businesswebsitetheme/images/icon1.jpg" alt="">Facebook</a></li>
                            <li><a href="#"><img src="/bundles/businesswebsitetheme/images/icon2.jpg" alt="">Twitter</a></li>
                            <li><a href="#"><img src="/bundles/businesswebsitetheme/images/icon3.jpg" alt="">LinkedIn</a></li>
                            <li><a href="#"><img src="/bundles/businesswebsitetheme/images/icon4.jpg" alt="">Delicious</a></li>
                        </ul>
                    ]]>
                </argument>
